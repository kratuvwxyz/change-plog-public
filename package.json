{
  "name": "change-plog",
  "displayName": "Change-PLOG",
  "description": "Create a changelog faster",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Programming Languages",
    "Extension Packs"
  ],
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.changelogHelper",
        "title": "Trigger Changelog Helper"
      }
    ],
    "keybindings": [
      {
        "command": "extension.changelogHelper",
        "key": "ctrl+alt+c",
        "when": "editorLangId == markdown"
      }
    ]
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.96.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "eslint": "^9.16.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
